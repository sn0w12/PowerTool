{
    "preamble": "PowerTool - Utility CLI for Windows\n\nUsage:\n  powertool <command> [input] [options]\n  pt <command> [input] [options]",
    "commands": {
        "help": {
            "summary": "Show this help message or help for a specific command.",
            "options": "[command-name]",
            "examples": [
                "powertool help rename-random",
                "powertool help filter-images"
            ]
        },
        "rename-random": {
            "summary": "Rename all files in a folder with random names.",
            "options": "[path]",
            "examples": [
                "powertool rename-random",
                "powertool rename-random \"C:\\MyFolder\""
            ]
        },
        "rename-random-recursive": {
            "summary": "Rename all files recursively in subfolders with random names.",
            "options": "[path]",
            "examples": [
                "powertool rename-random-recursive",
                "powertool rename-random-recursive \"C:\\MyFolder\""
            ]
        },
        "flatten": {
            "summary": "Move all files from subdirectories to the top level.",
            "options": "[path]",
            "examples": [
                "powertool flatten",
                "powertool flatten \"C:\\MyFolder\""
            ]
        },
        "filter-images": {
            "summary": "Remove images smaller than specified dimensions.",
            "options": "[path] -MinWidth <int> -MinHeight <int> | [path] -MinSize <int>",
            "examples": [
                "powertool filter-images -MinWidth 800 -MinHeight 600",
                "powertool filter-images \"C:\\MyFolder\" -MinWidth 1920 -MinHeight 1080",
                "powertool filter-images -MinSize 800",
                "powertool filter-images \"C:\\MyFolder\" -MinSize 1024"
            ]
        },
        "remove-text": {
            "summary": "Remove text from all txt files using regex pattern.",
            "options": "[path] -Pattern <regex>",
            "examples": [
                "powertool remove-text -Pattern \"Advertisement.*?End\"",
                "powertool remove-text \"C:\\MyFolder\" -Pattern \"\\d{4}-\\d{2}-\\d{2}\""
            ]
        }
    }
}
